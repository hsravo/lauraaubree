<p id="notice"><%= notice %></p>

<h1>Publications</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.title %></td>
        <td><%= publication.body %></td>
        <td><%= link_to 'Show', publication_path(publication) %></td>
        <% if user_signed_in? %>
          <% if isAdmin? %>
            <td><%= link_to 'Edit', edit_publication_path(publication) %></td>
            <td><%= link_to 'Destroy', [publication], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <% if isAdmin? %>
    <li><%= link_to 'New Publication', new_publication_path %></li>
    <li><%= link_to "Dashboard", dashboard_path %></li>
  <% end %>
<% end %>