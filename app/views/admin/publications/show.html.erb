<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @publication.title %>
</p>

<% if @publication.image %>
  <div class="container" style="width:400px; height:400px; display:flex; align-items: center;">
    <%= image_tag(@publication.image, style:'width:auto; height:100%') %>
  </div>
<% else %>
  <p> Coucou <p>
<% end %>

<p>
  <strong>Body:</strong>
  <%= @publication.body %>
</p>

<% if user_signed_in? %>
  <% if isAdmin? %>
    <%= link_to 'Edit', edit_publication_path(@publication) %> |
    <%= link_to 'Back', publications_path %>
  <% end %>
<% end %>